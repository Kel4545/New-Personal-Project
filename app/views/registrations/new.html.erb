<%= form_for @user, url: registrations_path do |f| %>
  <h1>Register</h1>
  <ul class="new_person">
    <li><%= f.label :password %>
      <%= f.password_field :password, autofocus: true %></li>
    <li><%= f.label :firstname %>
      <%= f.text_field :firstname, autofocus: true %>
      <%= f.label :lastname %>
      <%= f.text_field :lastname, autofocus: true %></li>
    <%= f.label :email %>
    <%= f.text_field :email, autofocus: true %>
    <%= f.submit "Register" %>
  </ul>
<% end %>